// This is your Prisma schema file
// Learn more: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// USERS & AUTHENTICATION (NextAuth.js tables)
// ============================================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          UserRole  @default(USER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  accounts           Account[]
  sessions           Session[]
  favorites          Favorite[]
  reviews            Review[]
  ratings            Rating[]
  toolSubmissions    ToolSubmission[]
  matchingFormResults MatchingFormResult[]

  @@index([email])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

enum UserRole {
  USER
  ADMIN
}

// ============================================
// AI TOOLS
// ============================================

model Tool {
  id              String      @id @default(cuid())
  name            String
  slug            String      @unique
  description     String      @db.Text
  longDescription String?     @db.Text
  websiteUrl      String
  logoUrl         String?

  // Pricing & Access
  pricingType     PricingType
  pricingDetails  String?     @db.Text
  hasFreeTier     Boolean     @default(false)

  // Metadata
  featuredScore   Int         @default(0)
  viewCount       Int         @default(0)
  favoriteCount   Int         @default(0)
  averageRating   Float?
  reviewCount     Int         @default(0)

  // Status
  isPublished     Boolean     @default(true)
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  // Relations
  categories      ToolCategory[]
  tags            ToolTag[]
  features        ToolFeature[]
  useCases        ToolUseCase[]
  techStacks      ToolTechStack[]
  favorites       Favorite[]
  reviews         Review[]
  ratings         Rating[]
  matchingResults ToolMatchingScore[]

  @@index([slug])
  @@index([pricingType])
  @@index([averageRating])
  @@index([featuredScore])
  @@index([createdAt])
}

enum PricingType {
  FREE
  FREEMIUM
  PAID
  SUBSCRIPTION
  OPEN_SOURCE
}

// ============================================
// CATEGORIES & TAXONOMY
// ============================================

model Category {
  id          String   @id @default(cuid())
  name        String   @unique
  slug        String   @unique
  description String?  @db.Text
  icon        String?
  order       Int      @default(0)
  createdAt   DateTime @default(now())

  tools       ToolCategory[]

  @@index([slug])
}

model Tag {
  id        String   @id @default(cuid())
  name      String   @unique
  slug      String   @unique
  createdAt DateTime @default(now())

  tools     ToolTag[]

  @@index([slug])
}

model Feature {
  id          String   @id @default(cuid())
  name        String   @unique
  slug        String   @unique
  description String?
  createdAt   DateTime @default(now())

  tools       ToolFeature[]

  @@index([slug])
}

model UseCase {
  id          String   @id @default(cuid())
  name        String   @unique
  slug        String   @unique
  description String?
  createdAt   DateTime @default(now())

  tools       ToolUseCase[]

  @@index([slug])
}

model TechStack {
  id        String   @id @default(cuid())
  name      String   @unique
  slug      String   @unique
  createdAt DateTime @default(now())

  tools     ToolTechStack[]

  @@index([slug])
}

// ============================================
// JUNCTION TABLES (Many-to-Many Relationships)
// ============================================

model ToolCategory {
  toolId     String
  categoryId String

  tool     Tool     @relation(fields: [toolId], references: [id], onDelete: Cascade)
  category Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@id([toolId, categoryId])
  @@index([categoryId])
}

model ToolTag {
  toolId String
  tagId  String

  tool Tool @relation(fields: [toolId], references: [id], onDelete: Cascade)
  tag  Tag  @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([toolId, tagId])
  @@index([tagId])
}

model ToolFeature {
  toolId    String
  featureId String

  tool    Tool    @relation(fields: [toolId], references: [id], onDelete: Cascade)
  feature Feature @relation(fields: [featureId], references: [id], onDelete: Cascade)

  @@id([toolId, featureId])
  @@index([featureId])
}

model ToolUseCase {
  toolId    String
  useCaseId String

  tool    Tool    @relation(fields: [toolId], references: [id], onDelete: Cascade)
  useCase UseCase @relation(fields: [useCaseId], references: [id], onDelete: Cascade)

  @@id([toolId, useCaseId])
  @@index([useCaseId])
}

model ToolTechStack {
  toolId      String
  techStackId String

  tool      Tool      @relation(fields: [toolId], references: [id], onDelete: Cascade)
  techStack TechStack @relation(fields: [techStackId], references: [id], onDelete: Cascade)

  @@id([toolId, techStackId])
  @@index([techStackId])
}

// ============================================
// USER INTERACTIONS
// ============================================

model Favorite {
  id        String   @id @default(cuid())
  userId    String
  toolId    String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  tool Tool @relation(fields: [toolId], references: [id], onDelete: Cascade)

  @@unique([userId, toolId])
  @@index([userId])
  @@index([toolId])
}

model Review {
  id         String   @id @default(cuid())
  userId     String
  toolId     String
  title      String
  content    String   @db.Text
  pros       String?  @db.Text
  cons       String?  @db.Text
  isApproved Boolean  @default(false)
  isReported Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  tool Tool @relation(fields: [toolId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([toolId])
  @@index([isApproved])
  @@index([createdAt])
}

model Rating {
  id        String   @id @default(cuid())
  userId    String
  toolId    String
  score     Int      // 1-5 stars
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  tool Tool @relation(fields: [toolId], references: [id], onDelete: Cascade)

  @@unique([userId, toolId])
  @@index([userId])
  @@index([toolId])
}

// ============================================
// TOOL SUBMISSIONS
// ============================================

model ToolSubmission {
  id                  String           @id @default(cuid())
  userId              String
  name                String
  description         String           @db.Text
  websiteUrl          String
  logoUrl             String?
  pricingType         PricingType
  pricingDetails      String?          @db.Text
  suggestedCategories String[]
  suggestedTags       String[]
  suggestedFeatures   String[]
  status              SubmissionStatus @default(PENDING)
  adminNotes          String?          @db.Text
  reviewedAt          DateTime?
  createdAt           DateTime         @default(now())
  updatedAt           DateTime         @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
  @@index([createdAt])
}

enum SubmissionStatus {
  PENDING
  APPROVED
  REJECTED
  NEEDS_REVIEW
}

// ============================================
// SMART MATCHING SYSTEM
// ============================================

model MatchingFormResult {
  id               String   @id @default(cuid())
  userId           String?
  projectType      String
  techStack        String[]
  budget           String
  experienceLevel  String
  primaryGoal      String
  specificFeatures String[]
  resultsGenerated Boolean  @default(false)
  createdAt        DateTime @default(now())

  user         User?               @relation(fields: [userId], references: [id], onDelete: SetNull)
  matchedTools ToolMatchingScore[]

  @@index([userId])
  @@index([createdAt])
}

model ToolMatchingScore {
  id           String   @id @default(cuid())
  formResultId String
  toolId       String
  score        Float
  matchReasons String[]

  formResult MatchingFormResult @relation(fields: [formResultId], references: [id], onDelete: Cascade)
  tool       Tool               @relation(fields: [toolId], references: [id], onDelete: Cascade)

  @@unique([formResultId, toolId])
  @@index([formResultId])
  @@index([score])
}
